mkdir -p data/raw
cd data/raw

wget -O - https://data.hplt-project.org/three/sorted/deu_Latn.map

wget -O - https://data.hplt-project.org/three/sorted/deu_Latn.map | wget -x -nH --cut-dirs=2 -i -


cd data/raw/deu_Latn
for z in *.jsonl.zst; do
    zstd -d "$z" && rm "$z"
done


